{
    "name": "desktop-novnc",
    "id": "desktop-novnc",
    "version": "0.0.2",
    "description": "Installs [noVNC](https://novnc.com) and websockify binaries.",
    "installsAfter": [
        "ghcr.io/sebst/dc-features/desktop-xserver",
        "ghcr.io/sebst/dc-features/desktop-fluxbox"
    ],
    "init": false,
    "privileged": false,
    "containerEnv": {
        "DISPLAY": ":1"
    },
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "1.2.0"
            ],
            "default": "latest",
            "description": "The version of noVNC to install."
        }
    }
}
